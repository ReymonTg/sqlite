{
    "name": "ahjdev/sqlite",
    "description": "Asynchronous MySQL client for PHP based on Amp.",
    "keywords": [
        "amphp",
        "sqlite",
        "async"
    ],
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name": "AmirHossein Jafari",
            "email": "amirhosseinjafari8228@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Amp\\SQlite\\": "src/"
        },
        "files": ["src/functions.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Amp\\SQlite\\Test\\": "test"
        }
    },
    "require": {
        "php-64bit"       : ">=8.2.17",
        "amphp/sql-common": "^2.0",
        "amphp/parallel"  : "^2.0"
    },
    "require-dev": {
        "amphp/php-cs-fixer-config": "^2.0"
    },
    "scripts": {
        "build": [
            "@cs-fix"
        ],
        "cs"    : "php -d pcre.jit=0 vendor/bin/php-cs-fixer fix -v --diff --dry-run",
        "cs-fix": "php -d pcre.jit=0 vendor/bin/php-cs-fixer fix -v --diff"
    }
}